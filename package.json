{
  "name": "bitlytics",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "db:seed": "node prisma/seed.js",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "db:studio": "npx prisma studio",
    "deploy": "bash scripts/deploy.sh",
    "deploy:prod": "NODE_ENV=production bash scripts/deploy.sh",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "health-check": "curl -f http://localhost:3000/healthz || exit 1",
    "logs": "vercel logs",
    "setup:production": "npm ci && npm run db:generate && npm run db:migrate:deploy"
  },
